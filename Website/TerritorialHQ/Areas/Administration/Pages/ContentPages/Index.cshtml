@page
@model TerritorialHQ.Areas.Administration.Pages.ContentPages.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Content Pages</h1>

<h2>Index</h2>
<p>
    <a asp-page="Create" class="btn btn-secondary">Create</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ContentPage[0].DisplayName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ContentPage)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DisplayName)
                </td>
                <td style="width: 1%; white-space: nowrap">
                    @*<a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-xs btn-secondary"><i class="icon-eye"></i></a>*@
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-secondary">Edit</a>
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
